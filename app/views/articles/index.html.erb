<h1>All articles</h1>

<ul id="Articles">
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article_path(article) %>
		</li>
	<% end %>
</ul><br>

<%= link_to "Show all tags", tags_path %><br>

<% if logged_in? %>
<%= link_to "Create a new article", new_article_path, class: 'new_article' %>
<% end %>
