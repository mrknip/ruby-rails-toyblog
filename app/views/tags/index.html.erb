<h1>All tags:</h1>
<ul>
  <% @tags.sort_by{|t| t.name }.each do |tag| %>
    <li><%= link_to tag.name, tag_path(tag) %> (<%= link_to "Delete", tag_path(tag),
                                                                      method: :delete,
                                                                      data: {confirm: "Are you sure?"}%>)</li>
  <% end %>
</ul><br>

